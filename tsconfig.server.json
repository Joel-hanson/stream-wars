{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["server.ts", "websocket-server.ts", "src/lib/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "src/app", "src/components", "dist", "*.test.ts", "*.spec.ts"]
}
